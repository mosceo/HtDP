#reader(lib "htdp-beginner-abbr-reader.ss" "lang")((modname worm) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #f #t none #f () #f)))
;(require 2htdp/batch-io)
;------------------------

; List -> List
; produce a list of prefixes
(define (prefixes l)
  (cond [(empty? l) (list '())]
        [else (cons '()
                    (prepend (first l) (prefixes (rest l))))]))

; Any List[List]
; add item 'i' to every element (also a list) of the list as the first element
(check-expect (prepend 1 (list empty)) (list (list 1)))
(check-expect (prepend 1 empty) empty)
(check-expect (prepend 1 (list (list "a"))) (list (list 1 "a")))
(check-expect (prepend 1 (list (list "a") (list "a" "b") (list "a" "b" "c")))
              (list (list 1 "a") (list 1 "a" "b") (list 1 "a" "b" "c")))

(define (prepend i l)
  (cond [(empty? l) '()]
        [else (cons (cons i (first l))
                    (prepend i (rest l)))]))









